html(lang="ja")
    head
        meta(charset="UTF-8")

        title パチサーチ
        link(href="/asset/css/reset.css",rel="stylesheet",type="text/css")
        link(href="/asset/css/lib/bootstrap/bootstrap.min.css", rel="stylesheet",type="text/css")
        link(href="/asset/css/lib/bootstrap/bootswatch.min.css", rel="stylesheet",type="text/css")
        link(href="/asset/css/home.css",rel="stylesheet",type="text/css")
        link(href="/asset/css/japan-map.css",rel="stylesheet",type="text/css")

    body
        include ../_nav
        div.container
            div.main-content(data-page="#{page}")
                for rowitem, index in viewDataList
                    div.row
                        for item in rowitem
                                div.col-lg-3
                                    div.panel.panel-primary
                                        div.panel-heading
                                            h3.panel-title #{item.mmodels.name}
                                        div.panel-body
                                            table.table.table-striped.table-hover
                                                tbody
                                                    tr.warning
                                                        td 導入開始 :
                                                        td #{item.mmodels.publishedAt}
                                                    tr.info
                                                        td 大当たり確率 :
                                                        td 1/239
                                                    tr.success
                                                        td 確変突入率 :
                                                        td 55%
                                                    tr.danger
                                                        td 確変継続率 :
                                                        td 77%
                                                    tr
                                                        td タイプ
                                                        td V-ST
                                            p.bs-component.model-info
                                                a.btn.btn-default.btn-block(href="#{item.linkStr}") 詳細
                                            p.bs-component.ball-rates
                                                for price in item.priceList
                                                    span.btn.btn-success.kisyu-link(data-href="#{item.mmodels.name}/rate?rate=#{price}") #{price}円


        include ../_japan-map

    script(src="//code.jquery.com/jquery-1.11.2.min.js")
    script(src="/asset/js/lib/jquery/jquery.history.js")
    script(src="/asset/js/lib/jquery/jquery.blockUI.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
    script(src="/asset/js/lib/jquery/jquery.japan-map.js")
    script(src="/asset/js/common.js")
    script(src="/asset/js/japan-map.js")
    script(src="/asset/js/home.js")

